<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_blue"
    tools:context=".UserProfileSettings">

    <Button
        android:id="@+id/saveUserProfile"
        android:layout_width="191dp"
        android:layout_height="0dp"
        android:layout_marginBottom="106dp"
        android:backgroundTint="#004AAD"
        android:text="Update Your Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userWeightstng" />

    <EditText
        android:id="@+id/userWeightstng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:hint="Weight"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/saveUserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userHeightstng" />

    <EditText
        android:id="@+id/userHeightstng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Height"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/userWeightstng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userLocationstng" />

    <EditText
        android:id="@+id/userDOBstng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Date of Birth"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/userLocationstng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameStng" />

    <EditText
        android:id="@+id/userLocationstng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Location"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/userHeightstng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDOBstng" />

    <EditText
        android:id="@+id/userNameStng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/userDOBstng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>