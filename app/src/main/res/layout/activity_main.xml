<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple_blue"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/lungLogo2"
        android:layout_width="212dp"
        android:layout_height="132dp"
        android:layout_marginTop="228dp"
        app:layout_constraintBottom_toTopOf="@+id/userEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo_lungs_no_bg" />

    <Button
        android:id="@+id/signUpButtonHome"
        android:layout_width="134dp"
        android:layout_height="69dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="148dp"
        android:backgroundTint="#004AAD"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toEndOf="@+id/loginButtonHome" />

    <Button
        android:id="@+id/loginButtonHome"
        android:layout_width="134dp"
        android:layout_height="69dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="148dp"
        android:backgroundTint="#004AAD"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/homePageBtn"
        android:layout_width="286dp"
        android:layout_height="69dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#004AAD"
        android:text="Home Page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lungLogo2" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="294dp"
        android:layout_height="74dp"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_name_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>